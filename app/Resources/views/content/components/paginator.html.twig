<div class="pagination-container">
      <nav aria-label="Page navigation">
          <ul class="pagination">
            {% if page_data.page > 1 %}
                <li>
                  <a href="{{path(route_name, params|merge({'page':1}))}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
            {% endif %}
            {% for page_index in 1..page_data.pages %}
                <li {%if page_data.page == page_index %} class="active"{% endif %}><a href="{{path(route_name, params|merge({page:page_index}))}}">{{page_index}}</a></li>
            {% endfor %}
            {% if page_data.page != page_data.pages %}   
                <li>
                  <a href="{{path(route_name, params|merge({page:page_data.pages}))}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
            {% endif %}
          </ul>
      </nav> 
</div>
