<div class="audio-player-container">
    <div class="audio-player" data-title="{{title}} {% if index is defined %} - Recording {{index}}{% endif %}" data-audio="{{url('stream',{fileName:audio|url_encode, type:'audio'})}}" data-type="{% if type is defined %}{{type}}{% else %}audio{% endif %}" data-target="{{path('stream',{fileName:audio|url_encode, type:'audio'})}}" data-id="#jquery_jplayer_{{id}}" data-container="#jp_container_audio_{{index}}_{{id}}">
    </div>

	<div id="jquery_jplayer_{{id}}" class="jp-jplayer"></div>	
	<div id="jp_container_audio_{{index}}_{{id}}" class="jp-audio" role="application" aria-label="media player">
		<div class="jp-type-single">
			<div class="jp-gui jp-interface">
				<div class="jp-controls">
					<button class="jp-play" role="button" tabindex="0">play</button>
					<button class="jp-stop" role="button" tabindex="0">stop</button>
				</div>
				<div class="jp-progress">
					<div class="jp-seek-bar">
						<div class="jp-play-bar"></div>
					</div>
				</div>
				<div class="jp-volume-controls">
					<button class="jp-mute" role="button" tabindex="0">mute</button>
					<button class="jp-volume-max" role="button" tabindex="0">max volume</button>
					<div class="jp-volume-bar">
						<div class="jp-volume-bar-value"></div>
					</div>
				</div>
				<div class="jp-time-holder">
					<div class="jp-current-time" role="timer" aria-label="time">&nbsp;</div>
					<div class="jp-duration" role="timer" aria-label="duration">&nbsp;</div>
					<div class="jp-toggles">
						<button class="jp-repeat" role="button" tabindex="0">repeat</button>
					</div>
				</div>
			</div>
			<div class="jp-details">
				<div class="jp-title" aria-label="title">&nbsp;</div>
			</div>
			<div class="jp-no-solution">
				<span>Update Required</span>
				To play the media you will need to either update your browser to a recent version or update your <a href="//get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
			</div>
		</div>
	</div>


    {% if segments is defined and segments|length > 1 %}
        <div class="segments">
            {% for segment in segments %}
                <a href="#" class="js-audio-segment" data-title="{{title}} - Recording {{loop.index}}" data-link="{{url('stream',{'fileName':Cryptography.Encrypt(segment['link'])|url_encode, 'type':'audio'})}}">Recording {{loop.index}}</a>
            {% endfor %}
        </div>
    {% endif %}
	
</div>
