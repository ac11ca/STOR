
    <div class="text-center">
      <nav aria-label="Page navigation">
          <ul class="pagination">
            {% if page > 1 %}
                <li>
                  <a href="{{path('dashboard_calls', {page:1})}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
            {% endif %}
            {% for page_index in 1..pages %}
                <li {%if page == page_index %} class="active"{% endif %}><a href="{{path(route_name, {page:page_index})}}">{{page_index}}</a></li>
            {% endfor %}
            {% if page != pages %}   
                <li>
                  <a href="{{path(route_name, {page:pages})}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
            {% endif %}
          </ul>
      </nav> 
    </div>
