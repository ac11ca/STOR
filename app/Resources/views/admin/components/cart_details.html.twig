
        {% for key,item in cart['items'] %}
            <div class="column" id="item_{{key}}">

                <table class="table table-striped">
                    <thead>
                        <th>
                            {{item['Subcategory']}}
                            <input type="hidden" value="{{item['Subcategory']}}" name="values[items][{{key}}][Subcategory]" />
                        </th>
                        <th>
                                <a href="#" class="form-remove" data-target="item_{{key}}"><span class="glyphicon glyphicon-remove" data-id="{{key}}" ></span></a>                        
                        </th>
                    </thead>
                    <tbody>
                        {% for field in item['form'] %}
                            <tr>
                                <td class="first">
                                    {{field['key']}}:
                                    <input type="hidden" value="{{field['key']}}" name="values[items][{{key}}][form][{{loop.index0}}][key]" />
                                </td>
                                <td>
                                    <input type="text" value="{{field['value']|join(',')}}" name="values[items][{{key}}][form][{{loop.index0}}][value]" id="field_{{loop.index0}}" class="form-control" required />
                                </td>                         
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <p><strong>{{'Price'|trans}}:</strong> $<input type="number" step="0.01" min="0" value="{{item['price']|number_format(2,'.',',')}}" name="values[items][{{key}}][price]" required />
</span></p>             

            </div> 
        {% endfor %}
