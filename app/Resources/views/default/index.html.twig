{% extends 'default/default_shell.html.twig' %}

{% block title %}{{'Instructions'|trans}}{% endblock %}

{% block pageclass %}instruction-page{% endblock%}
{% block pageunloadcategory %}Instructions_Time_End{% endblock %}

{% block searchbar %}{% endblock %}

{% block primarybody %}

    <h1 class="track-pageview" data-category="Instructions_Time_Start" data-label="Visit: {{visit}}">{{settings['instructions_title_text']}}</h1>

    <div id="instructions">
        {{settings['instructions_text']|raw}}
    </div>

    <div id="proceed_button">
        <a href="{{path('search_results', {term:term} )}}" class="btn btn-primary track-event" data-event="click" data-category="Instructions_Proceed_Button" data-label="Visit: {{visit}}">{{settings['instructions_button_text']}}</a>
    </div>

{% endblock %}
